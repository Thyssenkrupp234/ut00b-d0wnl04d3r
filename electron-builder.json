{

  "directories": {
    "output": "out",
    "buildResources": "build-res"
  },
  "linux": {
    "target": [
      "deb",
      "rpm"
    ]
  },
  "win": {
    "target": {
        "target": "nsis",
        "arch": [
            "ia32",
            "x64"
        ]
    }
},
"mac": {
  "target": {
    "target": [
      "pkg",
      "dmg"
    ],
    "arch": [
      "x64",
      "arm64"
    ]
}
},
  "nsis": {
    "oneClick": "false",
    "perMachine": "false",
    "allowToChangeInstallationDirectory": "true"
  }
}